doctype html
head
  meta(charset='UTF-8')
  title Chamb - Responsive E-commerce HTML5 Template
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  // enable mobile device
  meta(name='viewport' content='width=device-width, initial-scale=1')
  // fontawesome css
  link(rel='stylesheet' href='css/font-awesome.min.css')
  // bootstrap css
  link(rel='stylesheet' href='css/bootstrap.min.css')
  // animate css
  link(rel='stylesheet' href='css/animate-wow.css')
  // main css
  link(rel='stylesheet' href='css/style.css')
  link(rel='stylesheet' href='css/bootstrap-select.min.css')
  link(rel='stylesheet' href='css/slick.min.css')
  // responsive css
  link(rel='stylesheet' href='css/responsive.css')
header#header.top-head
  // Static navbar
  nav.navbar.navbar-default
    .container-fluid
      .row
        .col-md-4.col-sm-12.left-rs
          .navbar-header
            button#top-menu.navbar-toggle.collapsed(type='button' data-toggle='collapse' data-target='#navbar' aria-expanded='false')
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
            a.navbar-brand(href='/')
              img(src='images/logo.png' alt='')
          form.navbar-form.navbar-left.web-sh
            .form
              input.form-control(type='text' placeholder='Tìm kiếm sản phẩm')
        .col-md-8.col-sm-12
          .right-nav
            .login-sr
              .login-signup
                ul
                  li
                    a(href='/login.html') Đăng nhập
                  li
                    a.custom-b(href='/register.html') Đăng kí
            .help-r.hidden-xs
              .help-box
                ul
                  li
                    a(data-toggle='modal' data-target='#myModal' href='#')
                      span English
                      img(src='images/flag.png' alt='')
                  li
                    a(href='#')
                      img.h-i(src='images/help-icon.png' alt='')
                      |  Trợ giúp
            .nav-b.hidden-xs
              .nav-box
                ul
                  li
                    a(href='/how') Cách sử dụng
                  li
                    a(href='/about') Giới thiệu
    // /.container-fluid
block content
footer
  .main-footer
    .container
      .row
        .footer-top.clearfix
          .col-md-2.col-sm-6
            h2
              | Tạo tài khoản
              | ngay hôm nay
          .col-md-6.col-sm-6
            .form-box
              input(type ='text' placeholder='Nhập địa chỉ email')
              button Xác nhận
          .col-md-4.col-sm-12
            .help-box-f
              h4 Thắc mắc vui lòng liên hệ 090 000 0000
  .copyright
    .container
      .row
        .col-md-8
          p
            img(width='90' src='images/logo.png' alt='#' style='margin-top: -5px;')
            |  All Rights Reserved. Company Name &copy; 2018
        .col-md-4
          ul.list-inline.socials
            li
              a(href='')
                i.fa.fa-facebook(aria-hidden='true')
            li
              a(href='')
                i.fa.fa-twitter(aria-hidden='true')
            li
              a(href='')
                i.fa.fa-instagram(aria-hidden='true')
            li
              a(href='#')
                i.fa.fa-linkedin(aria-hidden='true')
          ul.right-flag
            li
              a(href='#')
                img(src='images/flag.png' alt='')
                span English
